<core:FragmentDefinition 
		xmlns="sap.m"
		xmlns:f="sap.ui.layout.form" 
		xmlns:core="sap.ui.core" 
		xmlns:l="sap.ui.layout">

<Dialog xmlns="sap.m" title="Department Clearance Form"  contentWidth="25%" contentHeight="10%" class="abcsapUiSizeCompact">
<content>
<l:Grid defaultSpan="L12 M12 S12" width="auto" position="Center">
				<l:content>
					<f:SimpleForm minWidth="1024" maxContainerCols="2"
						editable="true" layout="ResponsiveGridLayout" labelSpanL="2"
						labelSpanM="2"  emptySpanL="0" emptySpanM="0" columnsL="2"
						columnsM="2">
						<f:content>
						
							<Label  text="Select Department" />
						<Select id="idDept"  forceSelection="false" selectedKey="" enabled="true">
							
						</Select>
						<!-- selectedKey="{Eseparation>/EmpReason}"change="onChangeReason" -->
							
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
</content> 

<beginButton>
	<Button text="Ok" id="idOk" press="onOkForm" />
</beginButton>
<endButton>
	<Button text="Cancel" press="onCancel" /> 
</endButton>
</Dialog>
</core:FragmentDefinition>

