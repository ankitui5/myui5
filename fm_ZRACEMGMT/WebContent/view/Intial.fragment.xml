<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog xmlns="sap.m" title="RACE Management"
		class="sapUiSizeCompact" contentWidth="500px" contentHieght="150px">
		<content>
			<l:Grid defaultSpan="L12 M12 S12" width="auto" position="Center">
<l:content>
<f:SimpleForm minWidth="1024" maxContainerCols="2"
						editable="true" layout="ResponsiveGridLayout" labelSpanL="2"
						labelSpanM="2"  emptySpanL="0" emptySpanM="0" columnsL="2"
						columnsM="2">
						<f:content>
						
			<RadioButtonGroup  columns="3" width="100%" class="sapUiMediumMarginBottom">
				<buttons>
					<RadioButton  text="Display RACE"/>
					<RadioButton  text="Create RACE"/>
					<RadioButton  text="My Approval List"/>
				</buttons>
			</RadioButtonGroup>
						</f:content>
</f:SimpleForm>
</l:content>
			</l:Grid>
			
		</content>
		<beginButton>
			<Button text="OK" press="onRaceCloseButton" />
			
		</beginButton>
		<endButton>
			
			<Button text="Cancel" press="onRaceCloseCancle" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>