<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog xmlns="sap.m" title="Item Type Selection"
		class="sapUiSizeCompact" contentWidth="720px" contentHieght="320px" id="idfrag">
		<content>
			<VBox class="sapUiSmallMargin">
			<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" 
			  			    labelSpanL="1" labelSpanM="1" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="3">
				
				<f:content>
					<RadioButtonGroup columns="3" valueState="Error" class="rdButtonGrp">
					<buttons>
						<RadioButton groupName="GroupA" id="RD1" select="OnSingleSelect" text="Tyre" selected="true"/>
						<RadioButton groupName="GroupA" id="RD2" select="OnSingleSelect" text="Tube" selected="false"/>
						<RadioButton groupName="GroupA" id="RD3" select="OnSingleSelect" text="Flap" selected="false"/>
					</buttons>
					</RadioButtonGroup>
							
				</f:content>
			</f:SimpleForm>
		</VBox>
		</content>
		
		<beginButton>
			<Button text="OK" press="onTicketCloseButton1" />
		</beginButton>
		<endButton>
		    <Button text="Cancel" press="onTicketCancelButton" /> 
		</endButton>
	</Dialog>
</core:FragmentDefinition>