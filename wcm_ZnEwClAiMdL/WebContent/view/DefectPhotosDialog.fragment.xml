<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">

	<Dialog title="Upload Defect Photos" contentWidth="33%" contentHeight="20%" verticalScrolling="true" class="abcsapUiSizeCompact">
		<content>
		
		<l:Grid>
			<l:content>
				<VBox alignItems="Center">
					<Text id="idDFO" text="Defect: Outside " ></Text>
					<HBox alignItems="Center">
					<!-- <Button icon="sap-icon://add-photo" id="idbtn1"></Button> -->
					<core:Icon id="idiconDFO" src="sap-icon://add-photo" press="onDFO" size="4rem"/>
					</HBox>
						<layoutData>
							<l:GridData span="L4 M3 S12" />
						</layoutData>
				</VBox>
				
				<VBox alignItems="Center">
					<Text id="idDFI" text="Defect: Inside"></Text>
					<HBox alignItems="Center">
					<!-- <Button width="" icon="sap-icon://add-photo" id="idbtn2"></Button> -->
					<core:Icon id="idiconDFI" src="sap-icon://add-photo" press="onDFI" size="4rem"/>
					</HBox>
						<layoutData>
							<l:GridData span="L4 M3 S12" />
						</layoutData>
				</VBox>
				
				<VBox alignItems="Center">
					<Text id="idAOD" text="Any Other Defect"></Text>
					<HBox alignItems="Center">
					<!-- <Button width="" icon="sap-icon://add-photo" id="idbtn3" ></Button> -->
					<core:Icon id="idiconAOD" src="sap-icon://add-photo" press="onAOD" size="4rem"/>
					</HBox>
						<layoutData>
									<l:GridData span="L4 M3 S12" />
						</layoutData>
				</VBox>
			</l:content>
		</l:Grid>
		
			
			<!--  	 -->
 
 
		</content>

		<beginButton>
			<Button text="OK" press="OnDefectPhotosOk" /> 
		</beginButton>
		<!-- <endButton>
			<Button text="Cancel" press="OnDefectPhotoscancel" />
		</endButton> -->
	</Dialog>
</core:FragmentDefinition>		
		