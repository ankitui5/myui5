<core:FragmentDefinition xmlns="sap.m"
						xmlns:f="sap.ui.layout.form" 
						xmlns:core="sap.ui.core" 
						xmlns:l="sap.ui.layout" >
	<Dialog xmlns="sap.m" title="Remarks"
			class="sapUiSizeCompact withdraw" contentWidth="400px"><!-- contentWidth="400px" contentHeight="400px" -->
		<content>
			<l:Grid defaultSpan="L12 M12 S12" width="auto" position="Center">
				<l:content>
					<f:SimpleForm minWidth="400" maxContainerCols="1"
						editable="true" layout="ResponsiveGridLayout" labelSpanL="1"
						labelSpanM="1" emptySpanL="1" emptySpanM="1" columnsL="1"
						columnsM="1">
						<f:content>
					
							<Label text ="Remarks" />
							<TextArea id="idAcceptRemarks" maxLength="100" />
			
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
			
		</content>
		<beginButton>
			<Button text="OK" press="onApproveok" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onAcceptCancel" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>