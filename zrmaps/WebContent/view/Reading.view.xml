<core:View xmlns:core="sap.ui.core" 
		   xmlns:mvc="sap.ui.core.mvc"
		   xmlns="sap.m"
	       xmlns:layout="sap.ui.layout"
	       controllerName="zrmaps.view.Reading" 
	        xmlns:l="sap.ui.layout" 
	       	xmlns:u="sap.ui.unified"
	       xmlns:html="http://www.w3.org/1999/xhtml">        
<html:style>
.equalColumns .columns {
	min-height: 200px;
}

.equalColumns .columns .sapMFlexItem {
	background-color: #d1dbbd;
	width: 0;
	margin: 0 5px 0 0;
	padding: 10px;
}
 
</html:style>           
<Page title="Test App2" level="h4" class="sapUiStdPage" enableScrolling="true">
<content>
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
 
 		<l:VerticalLayout class="sapUiContentPadding equalColumns" width="100%" >
		<l:content>
			<FlexBox width="95%" class="columns" alignItems="Stretch">
				<items>
				
					<Image src="../../../../sap/zrmaps/img/FioriIcon.png" class="classbtn" press="onPressImage" densityAware="false" alt="No Image" > 
					<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Image>
					
					
					
					<Image src="../../../../sap/zrmaps/img/oDataIcon.jpg" class="classbtn" press="onPressImage2" densityAware="false" alt="No Image" > 
					<layoutData>
							<FlexItemData growFactor="1" /> 
						</layoutData>
					</Image>
				</items>
			</FlexBox>
			
			<FlexBox width="95%" class="columns" alignItems="Stretch">
				<items>
				<Image src="../../../../sap/zrmaps/img/abapicon.png" class="classbtn" press="onPressImage2" densityAware="false" alt="No Image" > 
					<layoutData>
							<FlexItemData growFactor="1" /> 
						</layoutData>
					</Image>
					
					<Image src="../../../../sap/zrmaps/img/time-sheet.png" class="classbtn" press="onPressImage2" densityAware="false" alt="No Image" > 
					<layoutData>
							<FlexItemData growFactor="1" /> 
						</layoutData>
					</Image>
				</items>
			</FlexBox>

		</l:content>
	</l:VerticalLayout>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->	

</content>
  
<footer>
	<Bar>
	<contentRight>
	<Button text="Open Fragments" press="onClick" type="Accept"  visible="true" />
		<Button text="Back" press="onBack" type="Accept"  visible="true" />
	
	</contentRight>
	</Bar>
	</footer>
</Page>
</core:View>