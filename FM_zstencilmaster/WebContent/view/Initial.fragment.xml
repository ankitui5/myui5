<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	>
	<Dialog xmlns="sap.m" title="Stencil Master" class="sapUiSizeCompact" contentWidth="35%" >
		
		<content>
			<l:Grid defaultSpan="L12 M12 S12" width="auto" position="Center">
				<l:content>
						 <RadioButtonGroup id="rbg" columns="2" selectedIndex="0">
							<buttons>
								<RadioButton id="RB1" text="Create Stencils" width="15rem"/>
								<RadioButton id="RB2" text="Delete Stencils"/>
							</buttons>
						</RadioButtonGroup>
				</l:content>
			</l:Grid>
			
		</content>
		
			<beginButton>
				<Button text="OK" press="onDialogOK" />
			</beginButton>
			<endButton>
				<Button text="Cancel" press="onDialogCancel" />
			</endButton>
	
	</Dialog>
</core:FragmentDefinition>
