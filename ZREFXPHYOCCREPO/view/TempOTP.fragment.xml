<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<Dialog title="Enter Mobile Number." contentWidth="250px" contentHeight="100px">
		<content>
				<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
					adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2">
				<form:content>
					<Label text="+91" design="Bold"/>
					<Input id="idTempMob" maxLength="10" placeholder="Enter Mobile Number" type="Number"></Input>
				</form:content>
			</form:SimpleForm>
		</content>
		<buttons>
			<Button type="Emphasized" id="idTempOTPSubmit" text="Generate OTP" press="OnTempGenerateOTP"/>
			<Button type="Emphasized" id="idTempOTPCancel" text="Cancel" press="OnTempOTPfragCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>